AT_BANNER([[Input Processing.]])

# Mostly test that we are robust to mistakes.

## ------------ ##
## Invalid $n.  ##
## ------------ ##


AT_SETUP([Invalid $n])

AT_DATA([input.y],
[[%%
exp: { $$ = $1 ; }
]])

AT_CHECK([bison input.y], [1], [],
[[input.y:2: invalid $ value
]])

AT_CLEANUP


## ------------ ##
## Invalid @n.  ##
## ------------ ##


AT_SETUP([Invalid @n])

AT_DATA([input.y],
[[%%
exp: { @$ = @1 ; }
]])

AT_CHECK([bison input.y], [1], [],
[[input.y:2: invalid @ value
]])

AT_CLEANUP
